<div class="container">
  <div class="row form-group">
    <div class="col-xs-6 col-xs-offset-3">
      <h1>Log in</h1>
      <%= form_with(scope: :session, url: sessions_path, local: true) do |form| %>
        <div class="form-group">
          <%= form.label :email %>
          <%= form.email_field :email %>
        </div>

        <div class="form-group">
          <%= form.label :password %>
          <%= form.password_field :password %>
        </div>

        <%= form.submit "Log in" %>
      <% end %>
    </div>
  </div>
  <div class="row">
    <div class="col-xs-6 col-xs-offset-3">
      <%= link_to "新規登録", new_user_path %>
    </div>
  </div>
</div>
