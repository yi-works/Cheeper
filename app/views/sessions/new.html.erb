<div class="container">
  <%= form_with(scope: :session, url: sessions_path, local: true, class: 'form-signin') do |form| %>
    <h2 class="form-signin-heading">Log in</h2>
    <%= form.label :email, class: 'sr-only' %>
    <%= form.email_field :email, class: 'form-control', placeholder: 'Email address' %>
    <%= form.label :password, class: 'sr-only' %>
    <%= form.password_field :password, class: 'form-control', placeholder: 'Password' %>
    <%= form.submit 'Log in', class: 'btn btn-lg btn-primary btn-block' %>
  <% end %>

  <%= link_to 'アカウント新規登録', new_user_path, class: 'btn btn-lg btn-block' %>
</div>
