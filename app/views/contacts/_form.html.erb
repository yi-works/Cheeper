<div class="container">
  <%= form_with(model: contact, local: true) do |form| %>
    <div class="row">
      <% if @contact.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(content.errors.count ) %> 件のエラー</h2>

          <ul>
            <% @contact.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>
    </div>

    <div class="row">
      <div class="col-xs-6 col-xs-offset-3 box">
        <div class="field">
          <%= form.text_area :content %>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col-xs-6 col-xs-offset-3 box">
        <%= form.submit '送信', class: 'btn btn-default' %>
      </div>
    </div>
    <div class="row">
      <div class="col-xs-6 col-xs-offset-3 box">
        <%= link_to 'Back', contacts_path, class: 'btn btn-default' %>
      </div>
    </div>
  <% end %>
</div>
