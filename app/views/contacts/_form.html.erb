<div class="container">
  <div class="row">
    <div class="col-xs-6 col-xs-offset-3">

      <%= form_with(model: contact, class: 'form-contact', local: true, url: confirm_contacts_path) do |form| %>

        <% if @contact.errors.any? %>
          <div id="error_explanation">
            <h2><%= @contact.errors.count %> 件のエラー</h2>

            <ul>
              <% @contact.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>

        <div class="field contact-field-name">
          <%= form.label '名前' %>
          <%= form.text_field :name, tabindex: '1', autofocus: 'autofocus' %>
        </div>

        <div class="field contact-field-email">
          <%= form.label 'メールアドレス' %>
          <%= form.text_field :email, tabindex: '2' %>
        </div>

        <div class="field contact-field-content">
          <%= form.label 'お問い合わせ内容' %>
          <%= form.text_area :content, tabindex: '3' %>
        </div>

        <div class="field">
          <%= form.submit '送信', class: 'btn btn-default', tabindex: '4' %>
        </div>

        <div class="back-link">
          <%= link_to '戻る', contacts_path, tabindex: '5' %>
        </div>
      <% end %>
    </div>
  </div>
</div>
