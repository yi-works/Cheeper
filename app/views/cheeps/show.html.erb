<div class="container">
  <div class="row">
    <div class="col-xs-6 col-xs-offset-3">
      <p>
        <strong>Content:</strong>
        <%= @cheep.content %>
      </p>
    </div>

    <div class="col-xs-6 col-xs-offset-3 box">
      <% if @cheep.user_id == current_user.id %>
        <%= link_to 'Edit', edit_cheep_path(@cheep), class: 'btn btn-default' %>
      <% end %>
      <%= link_to 'Back', cheeps_path, class: 'btn btn-default' %>
    </div>

    <div class="col-xs-6 col-xs-offset-3 box">
      <% unless @cheep.user == current_user %>
        <% if @favorite.present? %>
          <%=
            link_to 'お気に入り解除する',
            favorite_path(id: @favorite.id),
            method: :delete,
            class: 'btn btn-danger'
          %>
        <% else %>
          <%=
            link_to 'お気に入りに登録',
            favorites_path(cheep_id: @cheep.id),
            method: :post,
            class: 'btn btn-primary'
          %>
        <% end %>
      <% end %>
    </div>
  </div>
</div>
