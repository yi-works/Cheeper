<div class="container">
  <p>
    <strong>Content:</strong>
    <%= @cheep.content %>
  </p>

  <%= link_to 'Edit', edit_cheep_path(@cheep) %> |
  <%= link_to 'Back', cheeps_path %>

  <% unless @cheep.user == current_user %>
    <% if @favorite.present? %>
      <%=
        link_to 'お気に入り解除する',
        favorite_path(id: @favorite.id),
        method: :delete,
        class:'btn btn-danger'
      %>
    <% else %>
      <%=
        link_to 'お気に入りに登録',
        favorites_path(cheep_id: @cheep.id),
        method: :post,
        class: 'btn btn-primary'
      %>
    <% end %>
  <% end %>
</div>
