<div class="container">
  <div class="row">
    <div class="col-xs-6 col-xs-offset-3 box">
      <h2>以下の内容で送信します</h2>

      <%= form_with(model: @cheep, url: cheeps_path, local: true) do |form| %>
        <%= form.hidden_field :content %>
        <%= form.hidden_field :image_cache %>

        <div class="confirm_text">
          <p>内容</p>
          <p><%= @cheep.content %></p>
          <%= image_tag @cheep.image %>
          <%= form.submit "送信する", class: 'btn btn-default' %>
        </div>
      <% end %>

      <%= form_with(model: @cheep, url: new_cheep_path, local:true, method: 'get') do |form| %>
        <%= form.hidden_field :content %>
        <%= form.hidden_field :image_cache %>
        <%= form.submit "戻る", name: 'back', class: 'btn btn-default' %>
      <% end %>
    </div>
  </div>
</div>
